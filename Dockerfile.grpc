FROM golang:1.25.5-alpine AS builder

WORKDIR /app

# Install dependencies
RUN apk add --no-cache git make

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build gRPC server
RUN CGO_ENABLED=0 GOOS=linux go build -o /grpc-server ./entrypoint/grpc

FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata

WORKDIR /root/

COPY --from=builder /grpc-server .

EXPOSE 50051

CMD ["./grpc-server"]
